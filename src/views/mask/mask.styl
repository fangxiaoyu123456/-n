.mask{
    height: 100vh;
    width: 100vw;
    background rgba(0,0,0,0)
    position: fixed
    left: 0
    top: 0
    z-index: 3
    transition: left 0.5s
    .con{
        width: 3.74rem
        height: 100vh
        background #007af4 
        padding: .3rem
    }
}
.con_box{
    width: 100%;
    height: 1rem
    display: flex    

.img_box111{
    width: 1rem
    height: 1rem
    background red    
    border-radius: 50%;
    overflow hidden
    position: relative
    img{
        width: 100%;
        height: 100%;
        position absolute
        left: 0;
        top: 0
    }
    input{
        width: 100%;
        height: 100%;
        position absolute
        left: 0;
        top: 0
        opacity 0
    }
}
.con_box_right{
    flex: 1
    text-align: center;
    line-height: 1rem
    color: #fff;
    font-size: .3rem    
}
}