.water_title {
    width: 100vw;
    height: 0.68rem;
    background-color: #f5f5f5;

    img {
        width: 100%;
        height: 100%;
    }
}

.water_list {
    width: 100%;
    height: 1.57rem;
    border-bottom: 1px solid #dedede;
    display: flex;

    .water_left {
        width: 1.83rem;
        height: 1.57rem;

        .water_img {
            width: 1.72rem;
            height: 1.27rem;
            margin-left: 0.11rem;
            margin-top: 0.14rem;

            img {
                width: 100%;
                height: 100%;
            }
        }
    }

    .water_right {
        flex: 1;
        margin-left: 0.25rem;
        position: relative;

        h2 {
            height: 0.28rem;
            line-height: 0.28rem;
            margin-bottom: 0;
            margin-top: 0.19rem;
            font-size: 0.22rem;
            color: #333333;

            .xingxing {
                height: 0.28rem !important;
                font-size: 0.22rem !important;
                position: absolute;
                top: 0.15rem;
                left: 1.4rem;
            }
        }

        p {
            width: 2.83rem;
            height: 0.41rem;
            font-family: MicrosoftYaHei;
            font-size: 0.16rem;
            font-weight: normal;
            font-stretch: normal;
            line-height: 0.24rem;
            letter-spacing: 0.02rem;
            color: #9a9a9a;
            margin-bottom: 0.16rem;
        }

        h3 {
            height: 0.28rem;
            line-height: 0.28rem;
            color: #9a9a9a;
            font-size: 0.16rem;
        }

        .water_didian {
            font-size: 0.23rem !important;
            color: #858585 !important;
        }

        .water_phone {
            width: 0.65rem;
            height: 0.65rem;
            border-radius: 50%;
            background-color: #fbfbfb;
            border: solid 0.01rem #f5f5f5;
            text-align: center;
            line-height: 0.65rem;
            position: absolute;
            right: 0.34rem;
            top: 0.17rem;

            .phone_icon {
                color: red;
                font-size: 0.35rem;
                margin-top: 0.12rem;
            }
        }

        h4 {
            width: 0.73rem;
            height: 0.24rem;
            font-size: 0.24rem;
            line-height: 0.41rem;
            letter-spacing: 0.02rem;
            color: #929292;
            position:absolute;
            right: .24rem;
            bottom .4rem; 
            text-align: center;
        }
    }
}