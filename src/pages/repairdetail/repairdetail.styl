.repair_detail_top {
    width: 6.2rem;
    height: 2.9rem;
    background: #fff;
    margin-top: 0.13rem;
    margin-left: 0.1rem;
    position: relative;

    .repair_detail_top_title {
        height: 0.67rem;
        width: 100%;
        line-height: 0.67rem;
        border-bottom: 0.01rem solid #000;
        display: flex;

        h2 {
            width: 3rem;
            margin-left: 0.27rem;
            font-size: 0.22rem;
            color: #333333;
        }

        h3 {
            flex: 1;
            text-align: center;

            .repair_detail_xing {
                font-size: 0.2rem;
            }
        }
    }

    .repair_detail_top_main {
        margin-left: 0.57rem;
        margin-right: 0.3rem;

        h2 {
            height: 0.38rem;
            line-height: 0.38rem;
            font-size: 0.22rem;
            color: #919191;
            margin-bottom: 0;
            margin-top: 0.21rem;
        }

        h3 {
            height: 0.36rem;
            line-height: 0.36rem;
            font-size: 0.22rem;
            color: #919191;
            margin-bottom: 0;
        }

        h4 {
            height: 0.37rem;
            line-height: 0.37rem;
            font-size: 0.2rem;
            color: #9a9a9a;
            margin-bottom: 0.12rem;
        }

        h6 {
            height: 0.3rem;
            line-height: 0.3rem;
            text-align: right;
            font-size: 0.17rem;
            color: #9a9a9a;
            margin-bottom: 0.06rem;
        }

        .repair_detail_top_main_address {
            position: absolute;
            left: 0.2rem;
            top: 0.9rem;
            font-size: 0.3rem;
        }
    }
}

.btn_left {
    display: inline-block;
    width: 1.12rem;
    height: 0.4rem;
    background: #86d855;
    color: #fff;
    text-align: center;
    line-height: 0.4rem;
    font-size: 0.18rem;
    border-radius: 0.05rem;
}

.btn_right {
    display: inline-block;
    width: 1.12rem;
    height: 0.4rem;
    background: #75bcff;
    color: #fff;
    text-align: center;
    line-height: 0.4rem;
    font-size: 0.18rem;
    border-radius: 0.05rem;
    margin-left: 0.1rem;
}