
.water_main {
    margin-top: 0.1rem;
    margin-left: 0.1rem;

    .water_box {
        background: #ccc;
        width: 6.2rem;
        height: 1.9rem;
        display: flex;

        .water_left {
            width: 1.99rem;
            height: 1.9rem;

            .water_img {
                width: 1.96rem;
                height: 1.78rem;
                margin-top: 0.03rem;
                margin-left: 0.03rem;

                img {
                    width: 100%;
                    height: 100%;
                }
            }
        }

        .water_right {
            flex: 1;
            margin-left: 0.16rem;
            position: relative;

            h2 {
                height: 0.49rem;
                font-family: MicrosoftYaHei;
                font-size: 0.24rem;
                font-weight: normal;
                font-stretch: normal;
                line-height: 0.49rem;
                letter-spacing: 0.02rem;
                color: #333333;
                margin-bottom: 0;
            }

            h3 {
                height: 0.42rem;
                font-family: MicrosoftYaHei;
                font-size: 0.2rem;
                font-weight: normal;
                font-stretch: normal;
                line-height: 0.42rem;
                letter-spacing: 0.02rem;
                color: #333333;
                margin-left: 1.7rem;
                margin-bottom: 0;
            }

            .xingxing {
                height: 0.28rem !important;
                font-size: 0.1rem !important;
                position: absolute;
                top: 0.5rem;
                left: 0.1rem;
            }

            h4 {
                height: 0.44rem;
                line-height: 0.44rem;
                font-size: 0.3rem;
                color: #ff6600;
                margin-bottom: 0.11rem;

                i {
                    font-size: 0.16rem;
                    color: #9a9a9a;
                }
            }

            h5 {
                height: 0.44rem;
                line-height: 0.44rem;
                font-size: 0.14rem;
                color: #666666;
                text-align: right;
            }
        }
    }

    .water_address {
        width: 6.2rem;
        height: 0.99rem;
        padding: 0.1rem;
        background: #ccc;
        position: relative;
        margin-top: 0.12rem;

        .water_didian {
            width: 5.13rem;
            height: 0.84rem;
            border-right: 1px solid #000;

            p {
                line-height: 0.32rem;
                height: 0.32rem;
                font-size: 0.2rem;
                margin-bottom: 0;
                padding-top: 0.1rem;
                padding-left: 0.35rem;
            }

            .water_didian_icon {
                position: absolute;
                left: 0.15rem;
                top: 0.25rem;
            }
        }

        .water_phone {
            font-size: 0.5rem !important;
            color: #ff6600;
            position: absolute;
            right: 0.28rem;
            top: 0.25rem;
        }
    }

    .water_msg {
        width: 6.2rem;
        height: 2.53rem;
        background: #ccc;
        margin-top: 0.14rem;
        margin-bottom: 0.15rem;

        .water_msg_title {
            height: 0.54rem;
            width: 100%;
            border-bottom: 0.01rem solid #dedede;
            font-size: 0.24rem;
            line-height: 0.54rem;
            color: #333333;
            margin-bottom: 0;
        }

        .water_message {
            height: 1.99rem;
            width: 100%;
            padding: 0.28rem 0.38rem 0 0.38rem;

            p {
                font-size: 0.23rem;
                line-height: 0.32rem;
                color: #919191;
            }
        }
    }

    .water_comment {
        width: 6.2rem;
        background: #ccc;

        .water_comment_title {
            width: 6.16rem;
            margin-left: 0.02rem;
            height: 0.54rem;
            border-bottom: 1px solid #000;
            font-size: 0.22rem;
            line-height: 0.54rem;
            display: flex;

            .water_comment_title_left {
                width: 1.6rem;
                margin-left: 0.1rem;
            }

            .water_comment_title_right {
                flex: 1;
                text-align: right;
                margin-right: 0.25rem;
                position: relative;

                .water_comment_icon {
                    position: absolute;
                    top: 0.1rem;
                    left: 3.15rem;
                    font-size: 0.3rem;
                }
            }
        }

        .waterDetail_list {
            height: 1.28rem;
            display: flex;

            .waterDetail_list_left {
                width: 1.1rem;
                height: 1.28rem;

                .waterDetail_list_img {
                    width: 0.76rem;
                    height: 0.76rem;
                    border-radius: 50%;
                    margin-left: 0.14rem;
                    margin-top: 0.16rem;
                    overflow: hidden;

                    img {
                        width: 100%;
                        height: 100%;
                    }
                }
            }

            .waterDetail_list_right {
                flex: 1;
                border-bottom: 1px solid #000;

                .waterDetail_list_right_title {
                    display: flex;
                    width: 100%;
                    height: 0.42rem;
                    margin-top: 0.23rem;
                    line-height: 0.42rem;

                    .waterDetail_list_right_title_left {
                        width: 3rem;
                        text-align: left;
                        font-size: 0.2rem;
                        color: #525252;
                    }

                    .waterDetail_list_right_title_right {
                        flex: 1;
                        text-align: right;
                        font-size: 0.18rem;
                        color: #000;
                        margin-right: 0.2rem;
                    }
                }

                p {
                    width: 4.56rem;
                    height: 0.41rem;
                    font-family: MicrosoftYaHei;
                    font-size: 0.16rem;
                    font-weight: normal;
                    font-stretch: normal;
                    line-height: 0.24rem;
                    letter-spacing: 0.02rem;
                    color: #666666;
                }
            }
        }
    }
}

.water_foot {
    width: 6.4rem;
    height: 0.66rem;
    background-color: #ccc;
    position: fixed;
    left: 0;
    bottom: 0;

    .water_foot1 {
        display: inline-block;
        width: 1.89rem;
        height: 0.49rem;
        line-height: 0.49rem;
        border: 1px solid #ff6600;
        border-radius: 0.1rem;
        text-align: center;
        color: #000;
        margin-left: 0.09rem;
        margin-top: 0.08rem;
    }

    .water_foot2 {
        text-align: center;
        width: 4.19rem;
        height: 0.49rem;
        line-height: 0.49rem;
        background-color: #ff6600;
        display: inline-block;
        border-radius: 0.1rem;
        color: #fff;
        margin-left: 0.12rem;
    }
}