    width: 100vw;
    height: 0.98rem;
    position relative;
    left: 0;
    bottom: -0.6rem
    display: flex;

    .home_one {
        width: 2.97rem;
        height: 0.96rem;
        border: solid 0.01rem #ededed;
        margin-left 0.19rem
