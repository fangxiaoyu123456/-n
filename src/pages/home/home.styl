.header {
    width: 100vw;
    height: 0.88rem;
    background-color: #007af4;
    line-height: 0.88rem;
    color: #fff;
    text-align: center;
    position: relative;
    font-size: 0.34rem;

    .user {
        position: absolute;
        right: 0.2rem;
        top: 0.27rem;
        font-size: 0.4rem;
    }
}

.home_list {
    margin-left: 0.4rem;
    margin-top: 0.05rem;
    width: 6.4rem;
    ul {
        margin-bottom: 0;

        li {
            height: 1.44rem;
            width: 0.98rem;
            margin-right: 0.55rem;
            margin-top: 0.45rem;
            float: left;

            img {
                width: 0.98rem;
                height: 0.98rem;
            }

            h3 {
                margin-bottom: 0;
                color: #000;
                text-align: center;
                margin-top: 0.08rem;
            }
        }
    }
}

